            AnchorPane.bottomAnchor="26.0" AnchorPane.leftAnchor="112.0" AnchorPane.rightAnchor="112.0"
            AnchorPane.topAnchor="248.0"/>
    <Pane layoutX="74.0" layoutY="157.0" prefHeight="82.0" prefWidth="122.0">
